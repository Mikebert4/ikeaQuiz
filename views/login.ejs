<%- include('header.ejs'); %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="hero-element">
                    <!-- Your hero content goes here -->
                    <h1>Login Here</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <!-- login form -->
                <h3><%- message -%></h3>
                <form method="post" action="/login">
                    <input type="hidden" name="redirect" value="<%- redirect -%>">
                    <br />
                    <label for="username">Username: </label><input type="text" name="username" value="<%- username -%>">
                    <br />
                    <label for="password">Password: </label><input type="password" name="password" value="">
                    <br />
                    <input type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>
</div>


